CC=gcc
SRC=main.c holberton.c
#Use substitution
OBJ=$(SRC:.c=.o)
NAME=holberton
CFLAGS=-Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re
all: $(SRC:.c=.o) m.h
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

#call other targets
fclean: clean oclean

re: oclean all
